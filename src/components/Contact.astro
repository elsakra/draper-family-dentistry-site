---
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-sage-800 mb-4">
        Schedule Your Visit
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Ready to experience exceptional dental care? Contact us today to schedule your free consultation.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-semibold text-sage-800 mb-6">Get in Touch</h3>
          
          <!-- Contact Cards -->
          <div class="space-y-4">
            <div class="flex items-start space-x-4 p-6 bg-sage-50 rounded-xl hover:shadow-md transition-shadow">
              <div class="w-12 h-12 bg-dental-blue rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-sage-800 mb-1">Phone</h4>
                <p class="text-gray-600">925-866-0160</p>
                <p class="text-sm text-gray-500">Call for appointments & emergencies</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4 p-6 bg-sage-50 rounded-xl hover:shadow-md transition-shadow">
              <div class="w-12 h-12 bg-dental-blue rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-sage-800 mb-1">Email</h4>
                <p class="text-gray-600">Office@DFDental.com</p>
                <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4 p-6 bg-sage-50 rounded-xl hover:shadow-md transition-shadow">
              <div class="w-12 h-12 bg-dental-blue rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-sage-800 mb-1">Address</h4>
                <p class="text-gray-600">
                  3130 Crow Canyon Place<br>
                  Suite 195<br>
                  San Ramon, CA 94583
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Office Hours -->
        <div>
          <h3 class="text-2xl font-semibold text-sage-800 mb-6">Office Hours</h3>
          <div class="bg-sage-50 rounded-xl p-6">
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Monday</span>
                <span class="text-gray-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Tuesday</span>
                <span class="text-gray-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Wednesday</span>
                <span class="text-gray-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Thursday</span>
                <span class="text-gray-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Friday</span>
                <span class="text-gray-600">8:00 AM - 5:00 PM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Saturday</span>
                <span class="text-gray-600">By Appointment</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sage-700 font-medium">Sunday</span>
                <span class="text-gray-600">Closed</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="bg-sage-50 rounded-2xl p-8">
        <h3 class="text-2xl font-semibold text-sage-800 mb-6">Send us a Message</h3>
        
        <form class="space-y-6" action="mailto:Office@DFDental.com" method="post" enctype="text/plain">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-sage-700 mb-2">First Name</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required
                class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200"
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-sage-700 mb-2">Last Name</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required
                class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200"
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-sage-700 mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-sage-700 mb-2">Phone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-sage-700 mb-2">Service Interested In</label>
            <select 
              id="service" 
              name="service"
              class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200"
            >
              <option value="">Select a service</option>
              <option value="consultation">Free Consultation</option>
              <option value="cleaning">Dental Cleaning</option>
              <option value="implants">Dental Implants</option>
              <option value="invisalign">Invisalign</option>
              <option value="whitening">Teeth Whitening</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-sage-700 mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              class="w-full px-4 py-3 border border-sage-200 rounded-lg focus:ring-2 focus:ring-dental-blue focus:border-transparent transition-all duration-200 resize-none"
              placeholder="Tell us about your dental needs or questions..."
            ></textarea>
          </div>
          
          <button 
            type="submit"
            class="w-full bg-dental-blue hover:bg-dental-blue-dark text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 hover:shadow-lg transform hover:-translate-y-0.5"
          >
            Send Message
          </button>
        </form>
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500 mb-4">Or call us directly for immediate assistance</p>
          <a 
            href="tel:925-866-0160" 
            class="inline-flex items-center text-dental-blue hover:text-dental-blue-dark font-semibold transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            925-866-0160
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
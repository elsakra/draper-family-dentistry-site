---
---

<section class="relative bg-gradient-to-br from-sage-50 to-white py-20 lg:py-32 overflow-hidden">
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-dental-pink rounded-full opacity-20 animate-float"></div>
    <div class="absolute top-20 -left-20 w-60 h-60 bg-dental-soft-blue rounded-full opacity-20 animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-dental-yellow rounded-full opacity-20 animate-float" style="animation-delay: 4s;"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-center">
      <!-- Left Portrait -->
      <div class="hidden lg:block lg:col-span-2">
        <div class="relative">
          <div class="absolute inset-0 bg-dental-pink rounded-full transform -rotate-12"></div>
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768292505/auto-site-builder/Draper%20Family%20Dentistry/image_22.jpg" 
            alt="Dr. Garrett Draper" 
            class="relative z-10 w-32 h-32 rounded-full object-cover shadow-lg"
          />
        </div>
      </div>
      
      <!-- Main Content -->
      <div class="lg:col-span-8 text-center">
        <div class="animate-fade-in">
          <h1 class="text-4xl lg:text-6xl font-bold text-sage-800 mb-6 leading-tight">
            We brighten the world<br>
            <span class="text-dental-blue">one smile at a time</span>
          </h1>
          
          <p class="text-lg lg:text-xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
            Experience comprehensive dental care for your entire family. Dr. Garrett Draper and our expert team provide modern dentistry with a personal touch in San Ramon, CA.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <a 
              href="tel:925-866-0160" 
              class="bg-dental-blue hover:bg-dental-blue-dark text-white px-8 py-4 rounded-full font-semibold text-sm uppercase tracking-wide transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1 w-full sm:w-auto"
            >
              FREE Consultation
            </a>
            <a 
              href="/contact" 
              class="border-2 border-dental-blue text-dental-blue hover:bg-dental-blue hover:text-white px-8 py-4 rounded-full font-semibold text-sm uppercase tracking-wide transition-all duration-300 w-full sm:w-auto"
            >
              Learn More
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-sage-600">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-dental-blue mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Certified Dentist
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-dental-blue mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Insurance Accepted
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-dental-blue mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Modern Technology
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Portrait -->
      <div class="hidden lg:block lg:col-span-2">
        <div class="relative">
          <div class="absolute inset-0 bg-dental-soft-blue rounded-full transform rotate-12"></div>
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768292499/auto-site-builder/Draper%20Family%20Dentistry/image_6.jpg" 
            alt="Happy Patient" 
            class="relative z-10 w-32 h-32 rounded-full object-cover shadow-lg"
          />
        </div>
      </div>
    </div>
  </div>
</section>